            <groupId>org.springdoc</groupId>
            <artifactId>springdoc-openapi-starter-common</artifactId>
            <version>2.7.0</version>
        </dependency>
    </dependencies>
    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>
                <version>3.4.2</version>
                <configuration>
                    <archive>
                        <index>true</index>
                        <manifest>
                            <addClasspath>true</addClasspath>
                        </manifest>
                        <manifestEntries>
                            <Plugin-Id>elastic</Plugin-Id>
                            <Plugin-Version>${project.version}</Plugin-Version>
                            <Plugin-Provider>Matthew Edor</Plugin-Provider>
                            <Plugin-Description>Plugin providing elasticsearch components and capabilities to other components</Plugin-Description>
                            <Plugin-Dependencies>security</Plugin-Dependencies>
                            <Plugin-Class>com.mattae.snl.plugin.elastic.ElasticsearchPlugin</Plugin-Class>
                        </manifestEntries>
                    </archive>
                </configuration>
            </plugin>
                       <!-- Edit the <include> section to include appropriate package references. Easy to get the references using
                `mvn dependency:tree`. Include every reference package from and below your main reference package-->
